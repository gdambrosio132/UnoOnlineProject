<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameConnectionController">
   <children>
      <TextField fx:id="keyCodeTextField" layoutX="226.0" layoutY="188.0" promptText="KeyCode" />
      <Label layoutX="126.0" layoutY="121.0" text="Enter in a GameCode to Connect">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="joinGameButton" layoutX="274.0" layoutY="255.0" mnemonicParsing="false" onAction="#joinGameButtonOnAction" text="Enter" />
      <Label fx:id="invalidCodeText" layoutX="282.0" layoutY="224.0" textFill="RED" />
      <Button fx:id="createGameButton" layoutX="254.0" layoutY="308.0" mnemonicParsing="false" onAction="#createGameButtonOnAction" text="Create Game" />
   </children>
</AnchorPane>
